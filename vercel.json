{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/products.json", "dest": "/dist/products.json" },
    { "src": "/images/(.*)", "dest": "/dist/images/$1" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}